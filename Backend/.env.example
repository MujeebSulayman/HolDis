# Environment
NODE_ENV=development
PORT=3000

# Blockchain Configuration
RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
CHAIN_ID=1
HOLDIS_CONTRACT_ADDRESS=0x...

# Blockradar Configuration (Wallet-as-a-Service)
BLOCKRADAR_API_KEY=your_api_key_here
BLOCKRADAR_API_URL=https://api.blockradar.co
BLOCKRADAR_WALLET_ID=your_master_wallet_id
BLOCKRADAR_WEBHOOK_SECRET=your_webhook_secret

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/holdis

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Platform Configuration
PLATFORM_WALLET_ADDRESS=0x...
PLATFORM_FEE_PERCENTAGE=2.5

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
