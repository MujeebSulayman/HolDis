# Environment
NODE_ENV=development
PORT=3000

# Blockchain Configuration (Base Network)
# Base Mainnet Chain ID: 8453
# Base Sepolia (Testnet) Chain ID: 84532
RPC_URL=https://mainnet.base.org
CHAIN_ID=8453
HOLDIS_CONTRACT_ADDRESS=0x_YOUR_DEPLOYED_CONTRACT_ADDRESS

# Blockradar Configuration (Wallet-as-a-Service)
# Get these from: https://dashboard.blockradar.co
BLOCKRADAR_API_KEY=your_api_key_here
BLOCKRADAR_API_URL=https://api.blockradar.co
BLOCKRADAR_WALLET_ID=your_master_wallet_id
BLOCKRADAR_WEBHOOK_SECRET=your_webhook_secret

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/holdis

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Platform Configuration
PLATFORM_WALLET_ADDRESS=0x_YOUR_PLATFORM_WALLET_ADDRESS
PLATFORM_FEE_PERCENTAGE=2.5

# Security
# Generate secure random strings (32+ characters)
JWT_SECRET=your_secure_jwt_secret_min_32_chars
ENCRYPTION_KEY=your_secure_encryption_key_min_32_chars

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
